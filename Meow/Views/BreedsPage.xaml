                HeightRequest="50"
                IsRunning="{Binding IsBusy}"
                WidthRequest="50"
                Color="{AppThemeBinding Light='#703edb',
                                        Dark='#9F79F1'}" />

            <Label
                HorizontalTextAlignment="Center"
                Style="{StaticResource TxtSubtitle1_1}"
                Text="Loading"
                TextColor="{AppThemeBinding Light='#703edb',
