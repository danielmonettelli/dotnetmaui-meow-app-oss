                        HorizontalOptions="Center"
                        IsRunning="{Binding IsLoadBreeds}"
                        IsVisible="{Binding IsLoadBreeds}"
                        VerticalOptions="Center"
                        Color="{AppThemeBinding Light='#703edb',
                                                Dark='#9F79F1'}" />
